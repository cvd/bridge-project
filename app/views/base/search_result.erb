<div id="contentMain" class="full">
	<div class="hr"><hr /></div>
  <% if result.empty? %>
    <div class="empty-result"><h2>No results for: <em><%= @query %></em></h2></div>
  <% else %>
    <div class="search-results">
      <ul id="search-result">
        <%= partial "base/site", :collection => result %>
        <div class="paginate">
          <% (1..result.total_pages).each do |p| %>
          <% if p== 1 && result.current_page != 1%>
            <span><%= link_to "previous", "/search/?q=#{@query}&page=#{result.current_page-1}" %></span>
          <% end %>
            <span class="page">
              <%= link_to(p, "/search/?q=#{@query}&page=#{p}", :unless => result.current_page == p, :method => "post") unless result.total_pages==1%>
            </span>
            <% if p==result.total_pages && result.current_page != result.total_pages %>
              <span><%= link_to "next", "/search/?q=#{@query}&page=#{result.current_page+1}" %></span>            
            <% end %>
          <% end %>          
        </div>
      </ul>
      <div id="map" data-lat="38.876067" data-lng="-77.036133" data-method="map" ></div>  
    </div>
  <% end %>
</div>