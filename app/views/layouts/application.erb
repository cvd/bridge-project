<!DOCTYPE Html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
    <title><%= @title %></title>
    <%= stylesheet_link_tag "application.css" %>
    <link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" type="text/css" href="/css/global.css" media="screen" />
    <link rel="stylesheet" type="text/css" href="/css/topHat.css" media="screen" />
    <link rel="stylesheet" type="text/css" href="/css/modules.css" media="screen" />
    <link rel="stylesheet" href="/master.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="/stylesheets/print.css" type="text/css" media="print" />
    <link rel="stylesheet" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.4/themes/start/jquery-ui.css" type="text/css" media="screen" />

      <!-- JavaScript -->
      <script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
      <script src="/javascripts/jquery-1.5.min.js" type="text/javascript" charset="utf-8"></script>
      <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.4/jquery-ui.js" type="text/javascript" charset="utf-8"></script>
      <%= javascript_include_tag "application.js" %>
      <%= yield_content :head %>

  </head>
  <body>
    <div id="container">
      <div id="header">
        <div id="topHat">
          <div id="logo">
            <a href="http://www.gwu.edu">The George Washington University | Washington DC</a>
          </div>
        </div>
      </div>

      <div id="contentWrapperShadow">
        <div id="contentWrapper"> 

<!-- /END: ModuleH1-2 (Small) -->

          <div class="clear"></div>

          <div id="contentColumns">
            <div class="flash">
              <%= [:error, :warning, :notice].map { |type| flash_tag(type, :class => "message #{type}") }.join %>
            </div>
            <div>
              <div class="left">
                <a href="/"><img src="/images/logo-small.jpg" width="80" alt="Logo Full"></a>
              </div>
              <div id="header-title">
                <a href="/"><h2>The BRIDGE Project DC</h2></a>
                <%= partial :"carts/button" %>
                <div class="sub-title">DC Social Service Research Guide</div>
              </div>
              <div class="search">
                <form action="/search" method="post" accept-charset="utf-8">
                  <%= render "base/_search_bar", :layout=> false %>
                </form>
              </div>

            </div>
            <%= yield_content :sidebar %>

              <%= yield %>

            <div class="clear"></div>
          </div>

        </div>
        <div id="footer">
          <div class="hr"><hr /></div>
          <div id="footerParentMenu">
            <div class="footer940">
              <h2><a href="#">The George Washington University</a></h2>
              <ul>
                <li class="first"><a href="http://www.gwu.edu">GW Home</a></li>
                <li><a href="http://www.campusadvisories.gwu.edu/">Campus Advisories</a></li>
                <li><a href="http://www.gwu.edu/legal/copyright">Copyright</a></li>
                <li><a href="http://www.gwu.edu/legal/privacypolicy">Privacy Policy</a></li>
                <li><a href="http://www.gwu.edu/legal/termsofuse">Terms of Use</a></li>
                <li><a href="mailto:bridgeprojectdc@gmail.com">Contact Us</a></li>
                <li><a href="http://www.gwu.edu/azindex">A - Z Index</a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-18597843-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    </script>
  </body>
</html>
