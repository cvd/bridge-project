              </div>
              <div class="search">
                <form action="/search" method="post" accept-charset="utf-8">
                  <%= render "base/_search_bar", :layout=> false %>  
                </form>  
              </div>
              
            </div>
					  <%= yield_content :sidebar %>
					  
              <%= yield %>
              
						<div class="clear"></div>
					</div>
				
				</div>
