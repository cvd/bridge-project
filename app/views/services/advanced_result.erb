          <%# form_tag(url(:services, :advanced_search)+@request_string, :class=> "button_to", :method => 'get') do %>
          
          <input type="hidden" name="service[name]" value="<%= params[:service][:name] %>" id="service[name]">
            <input type="submit" name="page" value="<%= @current_page-1 %>"><<</input>
            <%# (1..@total_pages).each do |p| %>
              <input type="submit" name="page" value="<%= p %>" />
            <%# end %>
            <input type="submit" name="page" value="<%= @current_page+1 %>">>></input>
          <%# end %>
        </div> -->
        
        
      </ul>
      <div id="map" data-lat="38.876067" data-lng="-77.036133" data-method="map" ></div>  
    </div>
  <% end %>
</div>